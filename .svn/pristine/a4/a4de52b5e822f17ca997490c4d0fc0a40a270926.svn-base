<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>报名管理</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport"
    content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="stylesheet" href="__PUBLIC__/layuiadmin/layui/css/layui.css" media="all">
  <link rel="stylesheet" href="__PUBLIC__/layuiadmin/style/admin.css" media="all">
    <link rel="stylesheet" href="__PUBLIC__/layuiadmin/style/public.css" media="all">
  <style>
    .list {
      overflow: hidden;
    }

    .list>li {
      float: left;
      margin-right: 15px;
      border: 1px solid #ccc;
    }

    .img-div {
      height: 500px;
      overflow: hidden;
    }

    .layui-form-radio>i {
      font-size: 14px;
      margin-right: 2px;
    }

    .layui-form-radio {
      margin: 6px 0 0 0;
      padding-right: 2px;
    }

    .layui-form-radioed>div {
      color: red;
    }
  </style>
</head>

<body>
  <form class="layui-form" method="post" action="" id="form1">
    <div class="layui-fluid">
      <div class="layui-card" style="box-shadow:none">
        <div class="layui-card-header1">产品基本信息</div>
        <div class="layui-card-body" style="padding: 15px">
          <div class="layui-form-item">
            <label class="layui-form-label">订单号：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input"> {$exchange_record_detail.order_no}</div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">商品名称：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">{$exchange_record_detail.goods_name}</div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">兑换数量：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input"> {$exchange_record_detail.exchange_number}</div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">兑换所花费积分数量：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">{$exchange_record_detail.integral}</div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">订单状态：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">
                {switch name="exchange_record_detail.order_status"}
                {case value="0"}未处理{/case}
                {case value="1"}已处理{/case}
                {case value="2"}已取消{/case}
                {/switch}
              </div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">订单备注：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">{$exchange_record_detail.order_remark}</div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">兑换时间：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">{$exchange_record_detail.create_time | date="Y-m-d H:i",###}</div>
            </div>
          </div>
        </div>
      </div>
      <div class="layui-card" style="box-shadow:none">
        <div class="layui-card-header1">物流信息</div>
        <div class="layui-card-body" style="padding: 15px;">
          <div class="layui-form-item">
            <label class="layui-form-label">收货人姓名：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input"> {$exchange_record_detail.consignee_name}</div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">收货人电话：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">{$exchange_record_detail.consignee_phone}</div>
            </div>
          </div>
          {if condition="$integral_mall_goods.is_virtual == 0"}
          <div class="layui-form-item">
            <label class="layui-form-label">收货人地址：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">{$exchange_record_detail.consignee_phone}</div>
            </div>
          </div>
          {/if}
          {if condition="$exchange_record_detail.order_status != 2 && $integral_mall_goods.is_virtual == 0 || $action
            == 'edit' && $integral_mall_goods.is_virtual == 0"}
          <div class="layui-form-item">
            <label class="layui-form-label">快递公司：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">
                <select name="courier_company" {$exchange_record_detail['courier_company'] && empty($action)
                  ? 'disabled' : '' }>
                  {volist name="logistics" id="value"}
                  <option value="{$value}" {$value==$exchange_record_detail['courier_company'] ? 'selected' : '' }>
                    {$value}</option>
                  {/volist}
                </select>
              </div>
            </div>
          </div>
          <div class="layui-form-item">
            <label class="layui-form-label">快递单号：</label>
            <div class="layui-input-block">
              <div class="layui-form-mid mylayui-word-input">
                <input type="text" name="courier_number" value="{$exchange_record_detail.courier_number ?? ''}"
                  {$exchange_record_detail['courier_number'] && empty($action) ? 'disabled' : '' } class="layui-input" />
                {notempty name="$exchange_record_detail['courier_number']"}
                <a href="http://cha.chawuliu.cn/?stype=kd&q={$exchange_record_detail['courier_number']}" target="_blank"
                  style="color: red;">[查看快递信息]</a>
                {/notempty}
              </div>
            </div>
          </div>
          {/if}
        </div>
      </div>
    </div>
    <div class="layui-card-body">
        <div class="layui-btn-container">
            <input type="hidden" id="action" name="action" value="" />
            {if condition="$exchange_record_detail['order_status'] == 0 || $action=='edit' &&
                $integral_mall_goods.is_virtual == 0"}
                <button class="layui-btn layui-btn-primary layui-btn-sm" onclick="submit_form('delivery')">{$action ? '确认修改' : '确认发货'}</button>
                {if condition="$action != 'edit'"}
                <button class="layui-btn layui-btn-primary layui-btn-sm" onclick="submit_form('cancel')">取消订单</button>
                {/if}
            {/if}
        </div>
    </div>
</form>

  <script type="text/javascript" src="__PUBLIC__/layuiadmin/static/js/jquery-3.2.1.min.js"></script>
  <script src="__PUBLIC__/layuiadmin/static/js/layer/layer.js"></script>
  <script>
        // 确认提交表单
        function submit_form(action) {
          var msg = '';
          $('#action').val(action);
          if (action == 'delivery') {
            msg = '您确定要确认发货吗?';
          } else {
            msg = '您确定要取消订单吗?';
          }
    
          layer.confirm(msg, {
                btn: ['确定', '取消'] //按钮
            },
            // 确定 
            function () {
                console.log($('#form1'));
              $('#form1').submit();
            });
        }
    </script>
</body>

</html>