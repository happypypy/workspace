<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>新增模板</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="__PUBLIC__/layuiadmin/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="__PUBLIC__/layuiadmin/style/admin.css" media="all">
    <link rel="stylesheet" href="__PUBLIC__/layuiadmin/style/public.css" media="all" />
    <script type="text/javascript" src="__PUBLIC__/layuiadmin/js/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="__PUBLIC__/static/plugins/Ueditor/ueditor.config.js"></script>
    <script type="text/javascript" src="__PUBLIC__/static/plugins/Ueditor/ueditor.all.js"></script>
</head>
    <style>
        .imgPeview{
            border: solid 1px #ccc;
            width: 100px;
            height: 100px;
            margin-top: 5px;
        }
    </style>
<body>
    
<form class="layui-form" method="post" action="" lay-filter="component-form-group">
    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-card-header1">模板信息</div>
            <div class="layui-card-body" style="padding: 15px;">
                <div class="layui-form-item">
                    <label class="layui-form-label">模板名称</label>
                    <div class="layui-input-block">
                        <input type="text" name="template_name" lay-verify="required" autocomplete="off" placeholder="请输入模板名称" value="{$datainfo.template_name ?: ''}" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">模板缩略图：</label>
                    <div class="layui-input-block">
                        <input type="hidden" name="userimg" id="userimg" value="{$info['userimg'] ?: ''}" lay-verify="required"
                            class="layui-input">
                        <button  class="layui-btn layui-btn-sm" id="upload" type="button">上传图片</button>
                        <div class="layui-upload-list">
                            <img class="layui-upload-img" src="{$info['userimg'] ?: ''}" id="userimg_preview">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">模板描述</label>
                        <div class="layui-input-block">
                            <textarea name="template_desc" placeholder="请输入模板述" class="layui-textarea">{$datainfo.template_desc ?: ''}</textarea>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">模板状态</label>
                    <div class="layui-input-block">
                        {present name="$datainfo['status']"}
                            <input type="radio" name="status" value="1" {$datainfo.status == 1 ? 'checked' : ''} title="是" />
                            <input type="radio" name="status" value="0" {$datainfo.status == 0 ? 'checked' : ''} title="否" />
                        {else /}
                            <input type="radio" name="status" value="1" title="是" />
                            <input type="radio" name="status" value="0" title="否" checked />
                        {/present}
                    </div>
                </div>

                <div class="layui-form-item layui-layout-admin">
                    <div class="layui-input-block">
                        <div class="layui-footer" style="left: 0;z-index: 9999;">
                            <button class="layui-btn" lay-submit lay-filter="layuiadmin-submit" id="layuiadmin-submit">保存</button>
                            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="__PUBLIC__/layuiadmin/layui/layui.js"></script>
<script type="text/javascript" src="__PUBLIC__/layuiadmin/js/public.js"></script>
<script>
layui.config({
    base: '/layuiadmin/' //静态资源所在路径
}).extend({
    index: 'lib/index' //主入口模块
}).use(['index','table','uploadImg'], function(){
    var uploadImg = layui.uploadImg;
    uploadImg('upload', 'userimg', 'template');
});
</script>
</body>
</html>