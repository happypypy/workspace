<script type="text/javascript">
    //取消蜗牛童行同步
    function cancelWntxSync(activityid) {
        $.ajax({
            url: "{:url('activity/cancel_wntx_sync')}",
            data: "id="+activityid,
            type: "post",
            dataType: "json",
            success: function (obj) {
                if(obj.status=="success"){
                    //将按钮隐藏
                    $('#cancel_wn').css('display','none');
                    layer.msg("取消同步成功");
                    location.reload();
                }else{
                    layer.msg(obj.msg);
                }
            },
            error: function (obj) {
                layer.msg("网络错误");
            }
        });
    }
</script>
