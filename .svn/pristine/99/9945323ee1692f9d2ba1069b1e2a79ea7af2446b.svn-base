<script type="text/javascript">

    function check() {
        if($.trim($("#sms_business_license").val())==""){
            layer.msg('营业执照不能为空！');
            return false;
        }
        if($.trim($("#sms_sign").val())==""){
            layer.msg('短信签名不能为空！');
            return false;
        }
        if($.trim($("#sms_contact_name").val())==""){
            layer.msg('申请人姓名不能为空！');
            return false;
        }
        if($.trim($("#sms_contact_telephone").val())==""){
            layer.msg('申请人电话不能为空！');
            return false;
        }
        if($.trim($("#sms_agreement_path").val())==""){
            layer.msg('承诺函不能为空！');
            return false;
        }
        return true;
    }

    function empty() {
        window.location.reload();
    }

    function show_agreement() {
        layer.open({
            title: "协议书",
            type: 1,
            skin: 'layui-layer-rim', //加上边框
            area: ['420px', '240px'], //宽高
            content: '协议书内容'
        });
    }
</script>
