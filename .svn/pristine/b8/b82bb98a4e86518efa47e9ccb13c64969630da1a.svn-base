{
    var data= {"idsite":siteid, "id":id, "index": index};
    $.ajax({
        url:"/home/api/adshow",
        data:data,
        type:"post",
        dataType:"json",
        success:function(msg) {
            alert(msg[2].ad_id);
        }
    });
}

