$(function(){
	$(".liem_menu .city").hover(function(){
		$(this).children(".Tab_city").addClass("current");
		$(this).children(".Tab_city").siblings(".hide_city_group").show();
	},function(){
		$(this).children(".Tab_city").removeClass("current");
		$(this).children(".Tab_city").siblings(".hide_city_group").hide();
	});
});


$(function(){
	$(".Web_contact .foreLi").hover(function(){
		$(this).children(".drop-title").addClass("current").children(".drop-arrow").addClass("upwraw");
		$(this).children(".drop-title").siblings(".dropdown").show();
	},function(){
		$(this).children(".drop-title").removeClass("current").children(".drop-arrow").removeClass("upwraw");
		$(this).children(".drop-title").siblings(".dropdown").hide();
	});
});


