<script>
layui.config({
    base: '__PUBLIC__/layuiadmin/' //静态资源所在路径
}).extend({
    index: 'lib/index' //主入口模块
}).use(['index', 'table', 'jquery'], function(){
    var admin = layui.admin
    ,laypage = layui.laypage
    ,table = layui.table
    ,$ = layui.$;

    // 注册时间范围
    seltime1("rstime","retime","YYYY-MM-DD");
    // 取消时间范围
    seltime1("cstime","cetime","YYYY-MM-DD");

    table.render({
        elem: '#qrcode-manage-table'
        ,toolbar: '#qrcode-table-toolbar'
        ,defaultToolbar: ['filter']
        ,title: '用户数据表'
        ,cols: [[
        {type: 'checkbox'}
        ,{field:'id', title:'id', width:120, unresize: true}
        ,{field:'userimg', title:'头像', width:120, unresize: true,templet:'<div><img src="{{d.userimg}}" /></div>'}
        ,{field: 'nickname', title: '昵称', minWidth: 120, unresize: true }
        ,{field: 'intstate', title: '状态', width: 120, unresize: true }
        ,{field: 'dtsubscribetime', title: '关注时间', width: 180, unresize: true }
        ,{field: 'dtunsubscribetime', title: '取消时间', width: 180, unresize: true}
        ,{field: 'visitcount', title: '访问次数', width: 180, unresize: true}
        ,{field: 'integral', title: '当前积分', width: 180, unresize: true}
        ,{field: 'iduser', title: '所属商务', width: 120, unresize: true }
        ,{field: 'followuptime', title: '跟进日期', width: 120, unresize: true }
        ,{field: 'dtlastvisitteim', title: '最后访问时间', width: 120, unresize: true }
        ,{field: 'ismanage', title: '管理员', width: 120, unresize: true }
        ,{title:'操作', toolbar: '#qrcode-table-operation', width:230}
        ]]
        ,data: {:json_encode($member_list)}
        ,limit: {:$page->pageSize}
    });

    //总页数大于页码总数
    laypage.render({
        elem: 'qrcode-laypage'
        ,count: {:$page->count}
        ,curr: {:$page->iPage}
        ,limit: {:$page->pageSize}
        ,layout: ['count', 'prev', 'page', 'next', 'skip']
        ,jump: function(obj){
            if(obj.curr!= "{:$page->iPage}"){
                var jumpUrl = "{:$page->url('currentPage')}";
                jumpUrl = jumpUrl.replace("currentPage",obj.curr);
                location.href = jumpUrl;
            }
        }
    });

    // 批量删除
    $('#batchAll').click(function(){
        var checkStatus = table.checkStatus('qrcode-manage-table')
        ,checkData = checkStatus.data; //得到选中的数据

        if(checkData.length === 0){
          return layer.msg('请选择要删除的数据');
        }

        layer.confirm('确定删除吗？', function(index) {
          var ids = '';
          debugger;
          // 拼接ID
          checkData.forEach(function(item){
              ids += item.id + ',';
          });
          ids = ids.substr(0, ids.length - 1);
          del(ids);
        });
    })
    // 根据ID删除数据
    function del(ids){
          // 删除数据
          $.ajax({
                url:"{:url('qrcodemanage/qrcode_del')}",
                data:"id="+ids,
                type:"post",
                dataType:"json",
                success:function(msg) {
                    if (msg == 1) {
                        layer.msg('已删除');
                        location.reload();
                    }else if(msg == -1){
                        layer.alert('你没有删除权限', {icon: 5});
                    }else{
                        layer.alert('删除失败', {icon: 2});
                    }
                }
            });
    }
    //头工具栏事件
    table.on('toolbar(qrcode-manage-table)', function(obj){
        if(obj.event === 'add'){
            layer.open({
                type: 2,
                title: '新增二维码',
                shadeClose: true,
                shade: 0.8,
                area: ['530px', '300px'],
                content: "{:url('qrcodemanage/qrcode_modi','&action=add','')}"
            }); 
        }
    });
    
    //监听行工具事件
    table.on('tool(qrcode-manage-table)', function(obj){
        var data = obj.data;
        if(obj.event === 'del'){
            layer.confirm('确定删除'+data.qrcode_name+'吗？', function(index){
                del(data.id);
                layer.close(index);
            });
        } else if(obj.event === 'edit'){
            layer.open({
                type: 2,
                title: '编辑二维码',
                shadeClose: true,
                shade: 0.8,
                area: ['530px', '300px'],
                content: "{:url('qrcodemanage/qrcode_modi','&action=edit','','')}?id="+data.id
            }); 
        }
    });
});
</script>
