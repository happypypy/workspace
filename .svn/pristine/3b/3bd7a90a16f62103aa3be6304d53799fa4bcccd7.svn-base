<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>微信消息模版管理</title>
    <link href="__PUBLIC__/static/css/layout.css" rel="stylesheet" type="text/css" />
    <link href="__PUBLIC__/static/css/page.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="__PUBLIC__/static/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="__PUBLIC__/static/js/lhgdialog.js?skin=aero"></script>
    <script type="text/javascript" src="__PUBLIC__/static/js/CostomLinkOpenSw.js"></script>
    <script type="text/javascript" src="__PUBLIC__/static/js/tabscommon.js"></script>
    <script type="text/javascript" src="__PUBLIC__/static/js/del-checked.js"></script>
    <script type="text/javascript" src="__PUBLIC__/static/js/layer/layer.js"></script>
    <script type="text/javascript">

    </script>
</head>
<body>

<div class="oa_wrapper">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr class="oa_wrapper-display">
            <td class="oa_wrapper-top-arr-left">&nbsp;</td>
            <td class="oa_wrapper-top-arr-middle"></td>
            <td class="oa_wrapper-top-arr-right">&nbsp;</td>
        </tr>
        <tr>
            <td class="oa_wrapper-middle-arr-left oa_wrapper-display"></td>
            <td class="oa_wrapper-middle-arr-middle">
                <div class="oa_location clearfix"><span class="oa_ico-left"></span>location<span class="oa_ico-right"></span></div>
                <div class="oa_main clearfix">
                    <div class="oa_subnav clearfix">
                        <div class="oa_subnav-tab clearfix">
                            <ul>
                                <li class="oa_on" onclick="javascript:window.location='{:url('smsmanage/index','')}'"><em>微信消息模版管理</em></li>
                            </ul>
                        </div>
                    </div>
                    <div class="oa_title clearfix">
                          <span class="oa_title-btn">
                            <ul>
                              <li class="oa_selected">
                                   <a href="javascript:init_wxtemplate()">初始化微信消息模版</a>
                              </li>
                            </ul>
                          </span>
                        <span class="oa_ico-left"></span>
                        微信消息模版管理
                    </div>
                    <div class="oa_content-area clearfix">
                        <div class="oa_content-main">
                            <div class="oa_text-list">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="table-layout:fixed">
                                <tr class="oa_text-list-title">
                                    <th><span class="oa_arr-text-list-title"></span>模版ID</th>
                                    <th><span class="oa_arr-text-list-title"></span>标题</th>
                                    <th><span class="oa_arr-text-list-title"></span>详情</th>
                                    <th width="120"><span class="oa_arr-text-list-title"></span>操作</th>
                                </tr>
                                {volist name="template_list" id="vo"}
                                <tr>
                                    <td>{$vo['template_id']}</td>
                                    <td>{$vo['title']}</td>
                                    <td title="{$vo['content']}">{$vo['content']}</td>
                                    <td><a href="javascript:delete_wxtemplate('{$vo['template_id']}')">删除</a></td>
                                </tr>
                                {/volist}
                            </table>

                            </div>
                            <div class="oa_bottom clearfix">
                                <div class="clearfix">
                                    <div class="oa_page-controls">
                                        <ul>
                                            <li></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="oa_bottom-bottom"><em></em></div>
                            </div>
                        </div>
                    </div>

                </div>
            </td>
            <td class="oa_wrapper-middle-arr-right oa_wrapper-display"></td>
        </tr>
        <tr class="oa_wrapper-display">
            <td class="oa_wrapper-bottom-arr-left">&nbsp;</td>
            <td class="oa_wrapper-bottom-arr-middle"></td>
            <td class="oa_wrapper-bottom-arr-right">&nbsp;</td>
        </tr>
    </table>
</div>
<script type="text/javascript">
    /**
     * 删除微信消息模版
     * @param id
     */
    function delete_wxtemplate(id){

        layer.confirm("确定删除？删除后无法恢复，同时相关微信消息业务发送将会收到影响？", {
            btn: ['确定','取消'] //按钮
        }, function(){
            var url = "/admin/wxtemplate/delete_template/template_id/"+id;
            $.ajax({
                url:url,
                type:"get",
                dataType:"json",
                success:function(obj){
                    if (obj.status=="success"){
                        layer.alert('操作成功', {icon: 1}, function(index){
                            location.reload();
                            layer.close(index);

                        });
                    }else{

                        layer.alert('操作失败', {icon: 2}, function(index){
                            layer.close(index);
                        });
                    }
                },
                error:function(msg){
                    layer.alert('操作失败', {icon: 2}, function(index){
                        layer.close(index);
                        location.reload();
                    });
                }
            })
        });
    }

    /**
     * 初始化模版
     */
    function init_wxtemplate() {
        layer.confirm("更新项目所需的微信消息模版，请确保当前微信后台模版可用消息模版大于等于16条？", {
            btn: ['确定','取消'] //按钮
        }, function(){
            var url = "/admin/wxtemplate/init_wxtemplate";
            var layer_index = layer.load(1, {
                time: 0, //不自动关闭
                shade: [0.1,'#fff'] //0.1透明度的白色背景
            });
            $.ajax({
                url:url,
                type:"get",
                dataType:"json",
                success:function(obj){
                    layer.close(layer_index);
                    if (obj.status=="success"){
                        layer.alert(obj.msg, {icon: 1}, function(index){
                            location.reload();
                            layer.close(index);

                        });
                    }else{

                        layer.alert('操作失败', {icon: 2}, function(index){
                            layer.close(index);
                        });
                    }
                },
                error:function(msg){
                    layer.close(layer_index);
                    layer.alert('操作失败', {icon: 2}, function(index){
                        layer.close(index);
                        location.reload();
                    });
                }
            })
        });
    }

    function empty() {
        window.location.reload();
    }

</script>
</body>
</html>