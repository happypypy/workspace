<script type="text/javascript">
    $(".lang").eq(0).css("color","#f00");
    var type = $(".lang").eq(0).attr("lang");
    $("table .div_configs").hide();
    $("."+type).show();
    $(".lang").click(function () {
        $(this).css("color","#f00");//给点击的a标签加红色
        $(this).siblings().css("color","#000");//被点击之外的a标签颜色为黑色
        var lang = $(this).attr("lang");
        $(".div_configs").hide();
        $("."+lang).show();
    });
</script>
