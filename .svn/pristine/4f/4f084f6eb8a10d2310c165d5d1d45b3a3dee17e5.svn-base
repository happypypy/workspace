<form class="layui-form" method="post" action="{:url('admin/advert/advpost')}" lay-filter="component-form-group">
    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-card-header1">广告信息</div>
            <div class="layui-card-body" style="padding: 15px;">
                {foreach name="lang" item="v1" key="k1"}
                <?php $k1=='cn'?$prefix='':$prefix=$k1.'_'; ?>
                <div class="layui-form-item">
                    <?php $name = $prefix.'ad_name'; ?>
                    <label class="layui-form-label">广告名称<?php if($v1!=''){ ?> ({$v1})<?php }?></label>
                    <div class="layui-input-block">
                        <input type="text" name="{$name}" lay-verify="required" autocomplete="off" placeholder="请输入广告名称<?php if($v1!=''){ ?> ({$v1})<?php }?>" value="{$ad_info[$name]}" class="layui-input">
                    </div>
                </div>
                {/foreach}
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">广告类型</label>
                    <div class="layui-input-block">
                        <select name="media_type" class="oa_input-100">
                            <option value="1" {if condition="$ad_info.media_type eq 1"}selected{/if}>图片</option>
                            <!--
                            <option value="2" {if condition="$ad_info.media_type eq 2"}selected{/if}>flash</option>
                            <option value="3" {if condition="$ad_info.media_type eq 3"}selected{/if}>文字</option>
                            -->
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">广告链接</label>
                    <div class="layui-input-block">
                        <input type="text" name="ad_link" autocomplete="off" placeholder="请输入广告链接" value="{$datainfo.ad_link ?: ''}" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">广告位置</label>
                    <div class="layui-input-block">
                        <select name="pid" id="pid" class="oa_input-200">
                            {volist name="ad_position" id="vo"}
                            <option value="{$vo.position_id}" width="{$vo.ad_width}" lay-verify="required" height="{$vo.ad_height}" {if condition="$vo['position_id'] eq $ad_info['pid']"}selected{/if}>{$vo.position_name}</option>
                            {/volist}
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">开始日期</label>
                    <div class="layui-input-block">
                        <input type="text" name="start_time" autocomplete="off" placeholder="请输入开始日期" value="{$ad_info.start_time ?: ''}" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">结束日期</label>
                    <div class="layui-input-block">
                        <input type="text" name="end_time" autocomplete="off" placeholder="请输入结束日期" value="{$ad_info.end_time ?: ''}" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">广告图片</label>
                    <div class="layui-input-block">
                        <input name="ad_code" id="ad_code" lay-verify="required" type="hidden" value="{$ad_info['ad_code'] ?: ''}"  class="layui-input">
                        <button class="layui-btn layui-btn-sm" onclick="uploadimgcut('ad_code','album',0,0);" type="button">上传图片</button>
                        <div class="imgPeview" style="display:{$ad_info.ad_code ? 'block' : 'none'}" id="ad_code_div">
                            <img height="100" src="{$ad_info['ad_code'] ?: ''}" id="ad_code_img"/>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">是否新窗口</label>
                    <div class="layui-input-block">
                        <input name="target" type="radio" value="1" {if condition="$ad_info['target'] eq 1"}checked{/if} title="是" />
                        <input name="target" type="radio" value="2" {if condition="$ad_info['target'] eq 2"}checked{/if} title="否" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">是否显示</label>
                    <div class="layui-input-block">
                        <input name="enabled" type="radio" value="1" {if condition="$ad_info['enabled'] eq 1"}checked{/if} title="是" />
                        <input name="enabled" type="radio" value="2" {if condition="$ad_info['enabled'] eq 2"}checked{/if} title="否" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">默认排序</label>
                    <div class="layui-input-block">
                        <input type="text" name="orderby" autocomplete="off" placeholder="请输入排序" value="{$ad_info.orderby ?: 0}" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-layout-admin">
                    <div class="layui-input-block">
                        <div class="layui-footer" style="left: 0;z-index: 9999;">
                            <input type="hidden" name="action" value="{$ad_info.action}"/>
                            {if condition="$ad_info['action'] eq 'edit'"}
                            <input type="hidden" name="ad_id" value="{$ad_info.ad_id}"/>
                            {/if}
                            <input type="hidden" name="idsite" value="{$ad_info.idsite}" />
                            <input type="submit" class="layui-btn" lay-submit lay-filter="layuiadmin-submit" id="layuiadmin-submit" value="确定">
                        </div>
                    </div>
                </div>
            </div>
        </div>
