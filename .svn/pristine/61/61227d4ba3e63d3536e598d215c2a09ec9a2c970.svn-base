{volist name="$datalist" id="vo"}
<li class="list-item  flex">
  <div class="list-item-img"><img src="{$vo['goods_thumb']}"></div>
  <div class="list-item-txt flexCol">
    <div class="info title fontColor flex" onclick="javascript:goinfo({$vo['id']})">{$vo['goods_name']}</div>
    <div class="price info flex">
      <div class="tit">订单号</div>：
      <div class="txt">{$vo['order_no']}</div>
    </div>
    <div class="state info flex">
      <div class="tit">所需积分</div>：
      <div class="txt fontColor">{$vo['integral']}</div>
    </div>
    <div class="time info flex">
      <div class="tit">兑换数量</div>：
      <div class="txt">{$vo['exchange_number']}</div>
    </div>
    <div class="time info flex">
      <div class="tit">兑换时间</div>：
      <div class="txt">{$vo['create_time']|date="Y-m-d H：",###}</div>
    </div>
    <div class="time info flex">
        <div class="tit">状态</div>：
        <div class="txt">
            {if condition="$vo['order_status'] == 0"}
            <input class="several-btn2" type="button" value="待审核">
            {elseif condition="$vo['order_status'] == 1"}
            <input class="several-btn2" type="button" value="查看物流" onclick="window.location='https://m.kuaidihelp.com/express/queryResult?word={$vo.courier_number}'">
            {elseif condition="$vo['order_status'] == 2"}
            <input class="several-btn2" type="button" value="已取消">
            {/if}
        </div>
    </div>
    <div class="btns-right">
      <input class="several-btn1" type="button" value="订单详情" onclick="window.location='/{$sitecode}/integralexchangemanagedetail/{$vo['id']}'">
    </div>
  </div>
</li>
{/volist}