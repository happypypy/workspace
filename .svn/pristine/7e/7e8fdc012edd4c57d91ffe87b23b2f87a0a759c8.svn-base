        function shearch_check(param) {
            var st=$("#dtstart").val();
            var et=$("#dtend").val();
            if(st!="" && et!="")
            {
                var start=new Date(st.replace("-", "/").replace("-", "/"));
                var end=new Date(et.replace("-", "/").replace("-", "/"));
                if(end<start)
                {
                    layer.alert("代言开始时间不能大于结束时间！")
                     return;
                }
            }

            $("#form1").submit();

        }
        //导出数据
