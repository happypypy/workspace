            var url = "/admin/distribution/activity_order_export?dtstart="+dtstart+"&dtend="+dtend+'&audit_start='+audit_start+'&audit_end='+audit_end+'&audit_status='+audit_status +'&u_chrname='+u_chrname+'&wechat_number='+wechat_number+'&u_chrtel='+u_chrtel+'&export=10';
            window.open(url,"_blank");
        }
