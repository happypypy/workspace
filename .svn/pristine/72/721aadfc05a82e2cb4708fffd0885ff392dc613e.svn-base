//删除选中
function del_checked() {
    var b = $(".checked_one");
    var s = '';
    for(var i=0;i<b.length;i++){
        if(b[i].checked){
            s+= b[i].value+',';
        }
    }
    s = s.substr(0, s.length - 1);
    $.ajax({
        url:"{:url('menu/delchecked')}",
        data:"type=column&id="+s,
        type:"post",
        dataType:"json",
        success:function(msg){
            if (msg==1){
                alert("删除成功");
                location.reload();
            }else{
                alert("删除失败");
                location.reload();
            }
        }
    })

}

