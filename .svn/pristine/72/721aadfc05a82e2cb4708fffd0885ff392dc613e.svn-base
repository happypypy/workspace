function setDatetimepicker(id,format,view){
	$('#'+id).datetimepicker({
        format: format,  
        weekStart: 1,  
        autoclose: true,  
        startView: view,
        minView: view,  
        forceParse: false,  
        language: 'zh-CN'
	});
}
	