<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="yes" name="apple-mobile-web-app-capable">
  <meta content="yes" name="apple-touch-fullscreen">
  <meta content="telephone=no,email=no" name="format-detection">
  <meta name="viewport"
    content="width=device-width,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=no,user-scalable=0" />
    <script src="__PUBLIC__/static/template/pub/js/common.js"></script>
    <link rel="stylesheet" href="__PUBLIC__/static/template/pub/css/main.css?v={:time()}">
    <link rel="stylesheet" href="__PUBLIC__/static/template/skin/M1/css/skin.css?v={:time()}">
  
  <title>收藏列表</title>
</head>

<body class="flexCol">
    {include file="modules/common/header" /}
  <section class="section">
    <form action="" class="reg-form">
      <ul>
        <li>
          <label for="companyname" class="tit">账号:</label>
          <input type="text" name="chraccount" id="chraccount" value="{$userinfo['chraccount']}" class="txt" placeholder="请输入账号" />
        </li>
        <li>
          <label for="companyname" class="tit">姓名:</label>
          <input type="text" name="chrname" id="chrname" value="{$userinfo['chrname']}" class="txt" placeholder="请输入姓名" />
        </li>
        <li>
          <label for="companyname" class="tit">昵称：</label>
          <input type="text" name="nickname" id="nickname" value="{$userinfo['nickname']}" class="txt" placeholder="请输入昵称" />
        </li>
        <li>
          <label for="companyname" class="tit">电话:</label>
          <input type="text" name="chrtel" id="chrtel" value="{$userinfo['chrtel']}" class="txt" placeholder="请输入电话" />
        </li>
        <li>
          <label for="companyname" class="tit">邮箱:</label>
          <input type="text" name="chrmail" id="chrmail" value="{$userinfo['chrmail']}" class="txt" placeholder="请输入邮箱" />
        </li>
      </ul>
      <div class="btns-center">
        <input type="button" value="修改" class="sub-btn" onclick="javascript:savedata()" />
        <input type="button" class="cancel-btn" onclick="history.go(-1);" value="返回">
      </div>
    </form>
  </section>
  
  <footer class="footer">
  </footer>

  <script src="__PUBLIC__/static/template/pub/js/jquery.min.js"></script>
  <script src="__PUBLIC__/static/template/pub/js/menu.js"></script>
  <script src="__PUBLIC__/static/template/pub/js/layer/layer.js"></script>
  
  <script>
    function savedata() {
        $(".submit").hide;

        var str_chraccount=$("#chraccount").val();
        var str_chrname=$("#chrname").val();
        var str_nickname=$("#nickname").val();
        var str_chrtel=$("#chrtel").val();
        var str_chrmail=$("#chrmail").val();

        var data= {"chraccount":str_chraccount,"nickname":str_nickname,"chrname":str_chrname,"chrtel":str_chrtel,"chrmail":str_chrmail};
        $.ajax({
            url:"/{$sitecode}/usermodi",
            data:data,
            type:"post",
            dataType:"json",
            success:function(msg) {
                $(".submit").show();
                if(msg==1)
                {
                    layer.confirm('信息保存成功！',{btn:['关闭']});
                }
                else
                {
                    layer.confirm('信息保存失败！',{btn:['关闭']});
                }
                $(".submit").show();
            }
        })
    }
  </script>
</body>

</html>                  