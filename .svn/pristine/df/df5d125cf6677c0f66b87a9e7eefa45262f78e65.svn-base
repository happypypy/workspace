    /**
     * 根据内容id 获取内容详情
     * @param $cid: 内容id
     * @param string $show_field: 需要查找的字段
     * @return array|false|null|\PDOStatement|string|Model
     */
    public  function GetActivityInfo($id,$show_field = '', $groupBuyId = '', $groupBuyorderId = ''){
        if(empty($id)){
            return null;
        }
        $where['idactivity'] = ['eq',$id];
        if(!empty($show_field)){
            //获取活动库存
            $show_field .= ', sold, ischarge';
            $content_info = db('activity')->where($where)->field($show_field)->find();
        }else{
            $content_info = db('activity')->where($where)->find();
        }


        if(!empty($content_info))
        {
            if(isset($content_info['dtsignetime']))
            {
                //$content_info['dtsignetime'] = date('Y-m-d', strtotime($content_info['dtsignetime']) + 24 * 60 * 60);
            }

            $now = time();
            if(!empty($groupBuyId))
            {
                $package = [];
                if(!empty($groupBuyorderId))
                {
                    $groupBuyOrder = db('group_buy_order')
                        ->where(
                            [
                                'group_buy_order_id' => $groupBuyorderId
                            ]
                        )
                        ->find();
//                    $where = 'state = 1
//                        and start_at <= :now1
//                        and group_buy_id = :group_buy_id
//                        and (
//
//                                and end_at >= :now2
//
//                        )';
                    $now=time();
                    $map['state']=1;
                    $map['start_at']=['<=',$now];
                    $map['group_buy_id']=$groupBuyId;
                    $map['end_at']=['>=',$now];

                    $groupBuy = db('group_buy')
                        ->where($map)
                        ->find();

                    if($groupBuy)
                    {
                        $package = db('package')
                                ->where(
                                    [
                                        'package_id' => $groupBuy['package_id']
                                    ]
                                )
                                ->find();
                        $package['original_price'] = $package['member_price'];
                        $package['member_price'] = $groupBuy['group_buy_price'];
                        $package['stock'] = $groupBuyOrder['group_num'] - $groupBuyOrder['sold'];
                    }

                }else
                {
                    $groupBuy = db('group_buy')
                        ->where(
                            [
                                'group_buy_id' => $groupBuyId,
                                'state' => 1,
                                'start_at' => ['elt', $now],
                                'end_at' => ['egt', $now],
                            ]
                        )
                        ->find();

                    if($groupBuy)
                    {
                        $package = db('package')
                            ->where(
                                [
                                    'package_id' => $groupBuy['package_id']
                                ]
                            )
                            ->find();
                        $package['stock'] = Stock::getStock($package);
                        $package['original_price'] = $package['member_price'];
                        $package['member_price'] = $groupBuy['group_buy_price'];
                    }
                }

                if(!empty($package))
                {
                    if($package['stock'] <= 0)
                    {
                        $package['stock'] = '已售完';
                    }elseif(is_infinite($package['stock']))
                    {
                        $package['stock'] = '不限';
                    }else
                    {
                        $package['stock'] = $package['stock'];
                    }
                    $content_info['selcontent'] = [];
                    $content_info['selcontent'][0] = $package;
                }


            }else
            {

                $content_info['selcontent'] = db('package')
                    ->where(
                        [
                            'activity_id' => $id,
                            'expire_at' => ['egt', strtotime('-1 day')],
                            'state' => 1,
                        ]
                    )
                    // ->fetchSql(true)
                    ->select();
                foreach ($content_info['selcontent'] as $key => $value)
                {
                    $stock = Stock::getStock($value);
                    if($stock <= 0)
                    {
                        $content_info['selcontent'][$key]['stock'] = '已售完';
                    }elseif(is_infinite($stock))
                    {
                        $content_info['selcontent'][$key]['stock'] = '不限';
                    }else
                    {
                        $content_info['selcontent'][$key]['stock'] = $stock;
                    }

                    //免费
                    if($content_info['ischarge'] == 1)
                    {
                        $content_info['selcontent'][$key]['original_price'] = $content_info['selcontent'][$key]['member_price'] = 0;
                    }
                }
            }
        }
        Log::info('获取套餐，结果:' . print_r($content_info, true));
        return $content_info;
    }
