<script type="text/javascript">
    function Close(){
        window.parent.document.body.removeChild(window.parent.document.getElementById('uploadify'));
    }

    $("#CancelBtn").click(function(){
        window.parent.document.body.removeChild(window.parent.document.getElementById('uploadify'));
    });
	
    function sel(i) {
        $(window.parent.document.getElementById('nodepicurl')).val(i);
        $(window.parent.document.getElementById('nodepicurl_div')).show(0);
        $(window.parent.document.getElementById('nodepicurl_img')).attr('src',i);
        Close();
    }

</script>
