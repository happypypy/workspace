        }else if(listtype==3){
            $("#liststylea").attr('href',"__PUBLIC__/template/modules/listtype/big.png")
            $("#liststyleimg").attr('src',"__PUBLIC__/template/modules/listtype/big.png")
        }
    })


    function clearpic(){
        $("#nodepicurl").val('')
    }
    function checkdata() {
        var tmpValue=$("#nodename").val();
        if(tmpValue=="")
        {
            alert("栏目名称不能为空。");
            return ;
        }
        else if(tmpValue.length>6)
        {
            alert("栏目名称不能大于6个字符，建议用4个字符。");
            return ;
        }


        $("#frm").submit();

    }

