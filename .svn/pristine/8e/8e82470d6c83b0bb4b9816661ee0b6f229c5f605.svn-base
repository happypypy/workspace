        $("#liststyleimg").attr('src', "__PUBLIC__/template/modules/listtype/big.png")
    }
    
    $("#listtype").change(function(){
        var listtype=$(this).val()
        if(listtype==1){
            $("#liststylea").attr('href',"__PUBLIC__/template/modules/listtype/small.png")
            $("#liststyleimg").attr('src',"__PUBLIC__/template/modules/listtype/small.png")
        }else if(listtype==2){
            $("#liststylea").attr('href',"__PUBLIC__/template/modules/listtype/middle.png")
