        // 选择代言人
        function selectQrcode(){
            var user_id = "";
            var scene_str = "";
            var chose = false;
            $('.checked_one').each(function(){
                if($(this).is(":checked")){
                    user_id = $(this).val();
                    scene_str = $(this).attr("scene_str");
                    chose = true;
                }
            })
            if(!chose){
                alert('请选择一级代言人');return;
            }

            GetOpenerWin().selectQrcodeCallback(user_id,scene_str);
            CloseDiv();
        }

        function copydata(id)
        {
            $.ajax({
                url:"{:url('activity/copydata')}",
                data:"id="+id,
                type:"post",
                dataType:"json",
                success:function(msg) {
                    if (msg == 1) {
                        layer.alert('复制成功',{icon:1},function(){window.location.reload();});
                    }
                    else if(msg==-1){
                        layer.alert('你没有删除权限', {icon: 5});
                    }
                    else
                    {
                        layer.alert('删除失败', {icon: 2});
                        //location.reload();
                    }
                }
            })
        }
        //删除选中
        function del_checked1(value) {
            var b = $(".checked_one");
            var s = '';
            if(value<1)
            {
                for (var i = 0; i < b.length; i++) {
                    if (b[i].checked) {
                        s += b[i].value + ',';
                    }
                }
                s = s.substr(0, s.length - 1);
            }
            else
            {
                s=value;
            }

            $.ajax({
                url:"{:url('cashed/del')}",
                data:"id="+s,
                type:"post",
                dataType:"json",
                success:function(msg) {
                    if (msg == 1) {
                        layer.alert('删除成功', {icon:1});
                        $(".checked_one").attr("checked", false);
                        location.reload();
                    }
                    else if(msg==-1){
                        layer.alert('你没有删除权限', {icon: 5});
                    }
                    else
                    {
                        layer.alert('删除失败', {icon: 2});
                        //location.reload();
                    }
                }
            })
        }

