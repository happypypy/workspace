<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="yes" name="apple-touch-fullscreen">
    <meta content="telephone=no,email=no" name="format-detection">
    <meta name="viewport"
          content="width=device-width,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=no,user-scalable=0" />
    <script src="__PUBLIC__/static/template/pub/js/common.js"></script>
    <link rel="stylesheet" href="__PUBLIC__/static/template/pub/css/main.css?v={:time()}">
    <link rel="stylesheet" href="__PUBLIC__/static/template/skin/M1/css/skin.css?v={:time()}">
    <script src="__PUBLIC__/static/template/pub/js/jquery.min.js"></script>
    <script src="__PUBLIC__/static/template/pub/js/menu.js"></script>

    <title>动态信息</title>
</head>

<body class="flexCol">
{include file="modules/common/header" /}

<section class="section">
    <div class="headtitle">-我参与的活动-</div>


    <!-- da图 -->
    <div class="activity-wrap">
        <ul class="activity-list flex">
            {empty name="data"}
            <li class="no-data">您还没参与过活动。</li>
            {else /}
            <!-- 大图 -->
            {volist name="data" id="v"}
            <li class="activity-item-b">
                <a href="/{$sitecode}/act/pinfo/{$v['id']}.html" class="flexCol">
                    <div class="activity-item-txt">
                        <div>
                            <div class=" activity-item-title flex"><span class="title">{$v.title}</span></div>
                        </div>
                        <div class="activity-item-view node-item-view">
                            <div class="activity-view-inner flex">
                                <div class="time">活动时间：{:date('Y-m-d',$v['start_time'])} 到 {:date('Y-m-d',$v['end_time'])}</div>
                            </div>
                        </div>
                    </div>
                    <div class="activity-item-img"><img src="{$v['pic']}"></div>
                    <span style="display: none">&gt;查看详情</span>
                </a>
            </li>
            {/volist}
            {/empty}
        </ul>
    </div>

</section>

<footer class="footer"></footer>
{include file="modules/common/footer" /}

</body>
</html></html>