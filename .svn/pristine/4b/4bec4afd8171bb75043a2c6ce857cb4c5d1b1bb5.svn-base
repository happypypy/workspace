<script type="text/javascript" src="/static/js/layer/layer.js"></script>
<script language="JavaScript">

    function checkdata()
    {
        var signintype = $("#signintype").val();
        var checkcode = $("#checkcode").val();
        if(checkcode.length <= 0)
        {
            layer.alert('请输入签到码',{icon:2});
            return;
        }

        $("#searchdiv").hide();
        loaddata2(checkcode,signintype);
    }


    function return_search() {
        $("#frmdata").hide();
        $("#searchdiv").show();
        $("#checkcode").val('');
    }


    function sel(index) {
        if(index=="2")
        {
            $("#sel1").removeClass("seltab");
            $("#sel2").addClass("seltab");
            $("#tab1").hide();
            $("#tab2").show();

        }
        else
        {
            $("#sel2").removeClass("seltab");
            $("#sel1").addClass("seltab");
            $("#tab2").hide();
            $("#tab1").show();

        }
    }
    $(function () {
        sel(1);
    });


    wx.config({
        debug: false,
        appId: '<?php echo $signPackage["appId"]; ?>',
        timestamp: '<?php echo $signPackage["timestamp"]; ?>',
        nonceStr: '<?php echo $signPackage["nonceStr"]; ?>',
        signature: '<?php echo $signPackage["signature"]; ?>',
        jsApiList: ['scanQRCode',]
    });

    wx.ready(function () {
        wx.checkJsApi({
            jsApiList: [
                'scanQRCode'
            ],
            success: function (res) {
                if (res.checkResult.getLocation == false) {
                    alert('你的微信版本太低，不支持微信JS接口，请升级到最新的微信版本！');
                    return;
                }
            }
        });
        wx.error(function(res){
          //  alert("接口调取失败")
        });
        document.querySelector('#butsm').onclick = function() {
            wx.scanQRCode({
                needResult: 1, // 默认为0，扫描结果由微信处理，1则直接返回扫描结果，
                scanType: ["qrCode"], // 可以指定扫二维码还是一维码，默认二者都有
                success: function (res) {
                    var result = res.resultStr; // 当needResult 为 1 时，扫码返回的结果
                    // window.location.href = result;//因为我这边是扫描后有个链接，然后跳转到该页面
                    loaddata(result);
                }
            });
        }

    });

    // 扫码加载数据
    function loaddata(url){
        $("#searchdiv").hide();
        $.ajax({
            url: '/{$sitecode}/signinloaddata',
            type: 'post',
            data: {'url':url},
            success:function(data){
                if(data.length < 50){
                    layer.alert(data,{icon:2});
                    return_search();
                }else{
                    $("#frmdata").show();
                    $('#frmdata').html(data);
                }
            }
        });
    }
    // 签到码加载数据
    function loaddata2(checkcode,signintype){
        $("#searchdiv").hide();
        $.ajax({
            url: '/{$sitecode}/signinloaddata',
            type: 'post',
            data: {'signintype':signintype, 'checkcode':checkcode},
            success:function(data){
                if(data.length < 50){
                    layer.alert(data,{icon:2});
                    return_search();
                }else{
                    $("#frmdata").show();
                    $('#frmdata').html(data);
                }
            }
        });
    }
</script>