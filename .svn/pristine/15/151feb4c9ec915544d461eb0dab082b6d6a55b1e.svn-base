<script src="__PUBLIC__/layuiadmin/js/jquery-3.3.1.js"></script>
<script src="__PUBLIC__/layuiadmin/layui/layui.js"></script>
<script>
layui.config({
    base: '__PUBLIC__/layuiadmin/' //静态资源所在路径
}).extend({
    index: 'lib/index' //主入口模块
}).use(['index', 'table', 'jquery', 'form', 'laydate'], function(){
    var admin = layui.admin
    ,laypage = layui.laypage
    ,laydate = layui.laydate
    ,table = layui.table
    ,$ = layui.$
    ,form = layui.form;

    table.render({
        elem: '#manage-table'
        ,toolbar: '#table-toolbar'
        ,defaultToolbar: []
        ,title: '用户数据表'
        ,cols: [[
        {type: 'checkbox'}
        ,{field:'id', title:'id', width:120, unresize: true}
        ,{field:'userimg', title:'头像', width:120, unresize: true}
        ,{field: 'nickname', title: '昵称', minWidth: 120, unresize: true }
        ,{field: 'chrname', title: '姓名', width: 120, unresize: true }
        ,{field: 'integral_category', title: '积分类别', width: 180, unresize: true}
        ,{field: 'integral', title: '积分数量', width: 180, unresize: true}
        ,{field: 'integral_rmark', title: '赠送积分原因', width: 180, unresize: true}
        ,{field: 'create_time', title: '积分时间', width: 180, unresize: true}
        ]]
        ,data: [
            {volist name="member_integral_record" id="vo"}
            {
                id: "{$vo.id}",
                userimg: '<img style="width: 50px;" src="<?php echo empty($vo['userimg'])?'/static/images/userimg.jpg':$vo['userimg'] ?>">',
                nickname: "{$vo.nickname}",
                chrname: "{$vo.chrname}",
                integral_category: "{:config('integral_category')[$vo['category_id']]}",
                integral: '{in name="$vo['category_id']" value="1,2,3,6,7"}+{else/}-{/in}{$vo['integral']}
                                                        {switch name="$vo.is_freeze"}
                                                            {case value="1"}[冻结：产品未使用]{/case}
                                                            {case value="2"}[已解冻：已结束]{/case}
                                                            {case value="3"}[已失效：已退款]{/case}
                                                            {default /}
                                                        {/switch}',
                integral_rmark: "{$vo.integral_rmark}",
                create_time: "{$vo['create_time']|date="Y-m-d H:i:s",###}"
            },
            {/volist}
        ]
        ,limit: {:$page->pageSize}
    });

    //总页数大于页码总数
    laypage.render({
        elem: 'laypage'
        ,count: {:$page->count}
        ,curr: {:$page->iPage}
        ,limit: {:$page->pageSize}
        ,layout: ['count', 'prev', 'page', 'next', 'skip']
        ,jump: function(obj){
            if(obj.curr!= "{:$page->iPage}"){
                var jumpUrl = "{:$page->url('currentPage')}";
                jumpUrl = jumpUrl.replace("currentPage",obj.curr);
                location.href = jumpUrl;
            }
        }
    });

    // 监听积分时间
    form.on('radio(vflag)', function(data){
        if(data.value == 4){
        $('#comingTimeDiv').removeClass('layui-hide');
        }else{
        $('#comingTimeDiv').addClass('layui-hide');
        }
    });

    //积分开始日期
    var showStart = laydate.render({
        elem: '#starttime'
        , min: 0
        , done: function (value, date) {
        //更新结束日期的最小日期
        showEnd.config.min = lay.extend({}, date, {
        month: date.month - 1
        });
        //自动弹出结束日期的选择器
        showEnd.config.elem[0].focus();
    }
      });

    //积分结束时间
    var showEnd = laydate.render({
        elem: '#endtime'
        , min: 0
        , done: function (value, date) {
            //更新开始日期的最大日期
            showStart.config.max = lay.extend({}, date, {
            month: date.month - 1
            });
        }
    });
});
</script>
</html>