                              <input type="radio" name="vflag" value="1" title="今天" lay-filter="vflag" {$param['vflag']==1 ? 'checked' : ''}>
                              <input type="radio" name="vflag" value="2" title="最近7天" lay-filter="vflag" {$param['vflag']==2 ? 'checked' : ''}>
                              <input type="radio" name="vflag" value="3" title="最近30天" lay-filter="vflag" {$param['vflag']==3 ? 'checked' : ''}>
